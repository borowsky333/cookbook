@{
    Layout = "~/Views/Shared/SubscribeRedirect.cshtml";
}

@if (ViewBag.Message != null)
{
    if (ViewBag.Color == "Red")
    {
        <div class="span4 offset4 alert alert-block alert-error">
            <h3 style="text-align:center;">@ViewBag.Message</h3>
        </div>
    }
    else if (ViewBag.Color == "Green")
    {
        <div class="span4 offset4 alert alert-block alert-success">
            <h3 style="text-align:center;">@ViewBag.Message</h3>
        </div>
    }
    <br />
    
}