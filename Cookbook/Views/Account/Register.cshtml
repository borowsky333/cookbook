@model Cookbook.Models.RegisterModel
@{
    Layout = "~/Views/Shared/WelcomeLayout.cshtml";
}

<div class="well span8 offset2">
    <h2 style="text-align: center;">Register An Account</h2>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <fieldset>
            <div class="row-fluid">
                <div class="username span6 offset4">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                </div>
            </div>
            <div class="row-fluid">
                <div class="password span6 offset4">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                </div>
            </div>
            <div class="row-fluid">
                <div class="confirmpassword span6 offset4">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </div>
            </div>
            <div class="row-fluid">
                <div class="register span6 offset4">
                    <button type="submit" class="btn btn-inverse">Register</button>
                </div>
            </div>
        </fieldset>
    }
</div>

@Scripts.Render("~/bundles/jqueryval")
