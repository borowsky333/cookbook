@model Cookbook.Models.UploadRecipeModel

@{
    ViewBag.Title = "Upload Recipe";
}
<div>
    <h2>Upload Recipe</h2>
    <p>Uploading images is currently not supported. Sorry!</p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <fieldset>
            <legend>Upload Recipe</legend>
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title)
            <br />
            @Html.LabelFor(m => m.Instructions)
            @Html.TextBoxFor(m => m.Instructions)
            <br />
            @Html.LabelFor(m => m.Tags)
            @Html.TextBoxFor(m => m.Tags)
            <br />
            <input type="submit" value="Upload Recipe" />
        </fieldset>

    }
</div>
